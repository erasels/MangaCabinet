QComboBox {
    border: 1px solid #B6B6B6;
    border-radius: 5px;
    padding: 2px;
}
QComboBox:hover {
    border-color: #888888;
}
QComboBox::drop-down {
    border: 0;
}

QComboBox#Normal::down-arrow {
    padding-right: 3px;
    image: url(assets/images/sort_normal.png);
}

QComboBox#Reversed::down-arrow {
    padding-right: 3px;
    image: url(assets/images/sort_reversed.png);
}